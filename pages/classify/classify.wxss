@import "/style/common.wxss";
page {
  background-color: #fff;
}
.w_claasify {
  width: 100%;
  border-top: 1px solid #ebebeb;
}
.w_claasify_lefts {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 80;
  overflow: hidden;
  overflow-y: auto;
  width: 26%;
  height: 100vh;
  border-right: 1px solid #ccc;
}
.w_clsfy_rights {
  margin-left: 26%;
}
.scroll {
  height: 100vh;
}
.w_clsfy_Items {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 20rpx;
}
.w_clsfy_Items_text {
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}
.active-menu {
  background: -webkit-gradient(linear,left top, right top,from(#f90000),to(#f61e65));
  background: linear-gradient(to right,#f90000,#f61e65);
  color: #fff;
  border-radius: 50rpx;
}
.w_clsfy_ruls {
  padding: 0 30rpx;
  border-bottom: 1px solid #ccc;
}
.w_clsfy_ruls_h2 {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  margin-top: 10rpx;
  font-weight: 600;
}

.w_clsfy_rli_item {
  text-align: center;
  width: 33.33%;
  padding-bottom: 30rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
  color: #666;
  display:inline-block;
}
.product-img {
  width: 148rpx;
  height: 148rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: block;
}
