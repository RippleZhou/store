page{background: #fff;}
.arc-red {
    width: 100%;
    height:300rpx;
    background: linear-gradient(to right,#f90000,#f61e65);
    border-radius: 0 0 50% 50%;
    border-bottom: 1px solid #f5f5f5;
}

 .zh-logo {
    text-align: center;
}

 #logo-img {
    height: 175rpx;
    width: 175rpx;
    border-radius: 50%;
    margin-top: -85.5rpx;
}

.zh-name {
    margin-top: 30rpx;
    font-size: 36rpx;
}
.zh-intro {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #999;
    margin-bottom: 75rpx;
}
.notice {
    height: 50rpx;
    line-height: 50rpx;
    background: #f5f5f5;
}

 .notice .p {
    font-size: 28rpx;
    color: #666;
    padding-left: 20rpx;
}

.item-head {
    height: 80rpx;
    width: 80rpx;
}

.list-info {
    display: flex;
    flex: 1;
    justify-content: space-between;
    height: 85rpx;
        flex-direction: column;
    margin-left: 15rpx;
}
.list-info .p1{
    display: flex;
    justify-content: space-between;
}
.list-info .p1 .phone {
    font-size: 32rpx;
}

.list-info .p1 .quantity {
    font-size: 30rpx;
}

.list-info .p2 {
    display: flex;
    justify-content: space-between;
    margin-top: 15rpx;
    align-items: center;
    font-size: 26rpx;
}

.douBaoList {
    display: flex;
    align-items: center;
    height: 135rpx;
    border-top: 1px solid #ebebeb;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.list-info .p2 .date {
    color: #999;
}

.zh-logo .zh-name {
    margin-top: .9375rem;
    font-size: 1.125rem;
}
