/* pages/spike/spike.wxss */
@import "/style/common.wxss";

.swiper-wrap-tab{
  background: #fff;height:80rpx;line-height: 80rpx;position:fixed;top:0;left:0;width:100%;
  z-index: 100;
}
.spike_tab{height:80rpx;line-height: 80rpx;
  font-size: 30rpx;color:#333;text-align:center;position: relative;
}
.active-tab{
  color:#e61817;
}
.active-tab::after{
content: "";position: absolute;left:20%;bottom:0;height:2rpx;background:#e61817;
width:60%;
}

.spike_couTip{
  background: #fff;height: 90rpx;padding:0 20rpx;border-bottom:1px solid #f5f5f5;
  border-top:1px solid #f5f5f5;width:100%;position: fixed;top:0rpx;left:0;z-index: 100;
  display:flex;display:-webkit-flex;display: -ms-flexbox;
}
.spike_couIcons{
  font-size: 30rpx;line-height: 90rpx;color:#e61817;width:40%;text-align:left;
}
.spike_couIcons::before{
  font-family: nwscfonts!important; font-size:80rpx;vertical-align: middle;
  content:"\E058";color:#e61817;display:inline-block;margin-right: 18rpx;margin-top: -20rpx;
  }
  .spike_couRigs{
    font-size: 30rpx;line-height: 90rpx;color:#333;width:60%;text-align:right;
  }
  .spike_couYels,.spike_couYels::before{
    color:#fbb700;
  }
  .spike_couRigs text{display: inline-block;width:45rpx;height: 45rpx;text-align: center;border-radius: 5rpx;color: #fff;background:#2d2f36;line-height: 45rpx;
  margin: 0 8rpx;vertical-align:middle;
  }
  .spike_conBox{
margin-top:90rpx;
  }
.w_sw_con{
  margin-top:80rpx;
  min-height: calc(100vh - 80rpx);
  overflow: scroll;
}
.swiper-slide {
  width: 100%;
  height: 100%;
  position: relative;
}

.spike_list{
  background: #fff;border-bottom:1px solid #f5f5f5;
  padding:55rpx 20rpx 35rpx 20rpx;display:flex;display:-webkit-flex;display: -ms-flexbox;
}
.spike_list image{
  width:230rpx;height: 220rpx;margin-right: 15rpx;
}
.spike_listRigs{
  width:50%;flex-grow: 1;-webkit-flex-grow: 1;-webkit-box-flex-group: 1;
}
.spike_list_tit{
  font-size: 34rpx;color:#333;margin-bottom: 20rpx;
  text-overflow: ellipsis;overflow:hidden;-webkit-box-orient: vertical;display:-webkit-box;-webkit-line-clamp: 2;
}
.spike_list_limit{
  color:#fbb700;font-size: 24rpx;
}
.spike_list_progress{
  font-size: 24rpx;position: relative;
}
.spike_list_progress progress{
  width:220rpx;border-radius: 20rpx;overflow:hidden;display:inline-block;
  height: 30rpx;line-height: 30rpx;vertical-align:middle;
}
.spike_list_progress label{
  position: absolute;left:100rpx;top:5rpx;color:#fff;line-height: 30rpx;
}
.spike_list_progress text{
  display:inline-block;color:#e61817;margin-left: 20rpx;line-height: 30rpx;
}

.spike_list_txts{
  color:#e61817;font-size: 24rpx;justify-content: space-between;
  margin:0;text-align:left;margin-top: 85rpx;
}
.spike_list_txts text{
  font-size: 44rpx;
}
.spike_list_txts label{
  text-decoration:line-through;font-size: 26rpx;margin-left: 17rpx;color:#828282;
}
.spike_list_txts navigator{display:inline-block;float:right;
  width:140rpx;height: 60rpx;font-size: 30rpx;border-radius: 35rpx;background: #999;
  color:#fff;text-align:center;line-height:60rpx;
}
.spike_list_txts navigator.btnReds{
  background: #e61817;
}