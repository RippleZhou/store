/* pages/order/virtual-detail/virtual-detail.wxss */

/***中间**/
.vir_box{
  margin-top: 88rpx;padding-bottom: 100rpx;
}

.w_virDet_pros{
  display:flex;display:-webkit-flex;display: -ms-flexbox;background: #fff;
  position: relative;
  padding:20rpx 20rpx 50rpx 20rpx;
}
.w_virDet_pros image{
  width:184rpx;height: 184rpx!important;border-radius: 10rpx;margin-right: 20rpx;
}
.w_virDet_pros .w_ridge_title{
font-size: 28rpx;color:#333;width:64%;flex-grow: 1;-webkit-flex-grow: 1;-webkit-box-flex-group: 1;
}
.w_virDet_pros .w_ridge_nums{
  position: absolute;right:30rpx;bottom:50rpx;font-size: 28rpx;color:#333;
}

.w_virDet_lists,.w_virDet_lists3{
  border-top:1px solid #EBEBEB;display:flex;display:-webkit-flex;display: -ms-flexbox;
  width:100%;background: #fff;padding:0 20rpx;
}
.w_virDet_lists text{
  width:26%;text-align: left;font-size: 30rpx;color:#333;font-weight: bold;line-height: 90rpx;
  display:block;
}
.w_virDet_lists label{
  display:block;font-size: 28rpx;width:74%;color:#666666;text-align: right;line-height: 90rpx;
}
.w_vir_mt{margin-top: 20rpx;}
.w_virDet_lists3>text{
  width:26%;text-align: left;font-size: 30rpx;color:#333;font-weight: bold;line-height: 90rpx;
  display:block;
}
.w_virDet_lists3 .w_virDet_liRigs{
text-align: right;width:74%;font-size: 28rpx;line-height: 60rpx;padding:20rpx 0;
}
.w_codeList text{
  display:inline-block !important;color:#CCCCCC;
}
.w_codeList label{
  color:#333;display: inline-block !important;padding-left: 100rpx;
}

.w_virTxtOthers text{
  color:#666666;
}
.w_virTxtOthers label{
  color:#3366CC;padding-left: 20rpx;
}

.w_virTxtReds text{
  color:#666666;
}
.w_virTxtReds label{
  color:#E61817;padding-left: 20rpx;
}

.w_virTxtBlack label{
  padding-left: 20rpx;
}
.w_virTxtOrange text{
  color:#666666;
}
.w_virTxtOrange label{
  color:#FF9000;padding-left: 20rpx;
}


.w_virDet_lists2{
  border-top:1px solid #EBEBEB;width:100%;background: #fff;padding:0 20rpx 20rpx 20rpx;
}
.w_virDet_lists2 label,.w_virDet_lists2 text{
display: block;text-align: left;font-size: 30rpx;
}
.w_virDet_lists2 label{
line-height: 90rpx;
}
.w_virDet_lists2 text{
background: #F5F5F5;color:#666;padding:15rpx;border-radius: 6rpx;min-height: 90rpx;
}

.w_virtual_priceTxt{
  padding:20rpx 0;background: #fff;
}
.w_virtual_priceTxt .w_virDet_lists{border:0;}
.w_virtual_priceTxt .w_virDet_lists text{
  font-size: 26rpx;line-height: 50rpx;
}
.w_virtual_priceTxt .w_virDet_lists label{
  font-size: 30rpx;line-height: 50rpx;
}
.w_virtual_priceTxt .w_virDet_lists:last-child label{
  color:#E61817;
}

.w_virtual_priceTxt .w_vir_tit{
  font-size: 26rpx;color:#333;padding-bottom: 10rpx;font-weight: bold;
}
.w_virtual_priceTxt .w_vir_inLis{
  line-height:56rpx;font-size: 26rpx;color:#333;
}
.w_virtual_priceTxt .w_vir_inLis label{font-weight: bold;}
.w_virtual_priceTxt2{
  padding:20rpx;
}

.w_orderDetail_btns{
  position: fixed;bottom:0;left: 0;width:100%;height: 100rpx;background: #fff;
  padding:20rpx;text-align:right;
}
.w_orderDetail_btns text{
height: 60rpx;font-size: 28rpx;color:#333;border:1px solid #EBEBEB;border-radius: 60rpx;
line-height: 58rpx;margin-left: 20rpx;padding:0 20rpx;display: inline-block;
}
.w_orderDetail_btns text.w_txtReds{
  color:#E61817;border-color:#E61817;
}

.code_pop{
  width:100%;height: 100%;position:fixed;z-index: 100;background: rgba(0, 0, 0, .3);
  left:0;top:0;
}
.code_boxs{
  width:80%;display:block;background: #fff;border-radius:10rpx;position:absolute;
  top:20%;left:10%;z-index: 101;
}
.code_boxs .code_tit{
  padding:20rpx;font-size: 30rpx;color:#333;text-align:center;
}
.code_boxs image{
  width:100%;text-align:center;
}
.code_boxs .code_btn{
  text-align:center;border-top:1px solid #ebebeb;color:#e61817;font-size:30rpx;height: 96rpx;line-height: 96rpx;
}