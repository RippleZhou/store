/* //下載app彈窗 */
.gotoapp-mask{  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: #000;
  opacity: 0.5;}
.gotoapp-content{
  position: fixed;
    display: table;
    z-index: 9999;
    width: 80%;
    max-width: 300px;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    background-color: #fff;
    text-align: center;
    border-radius: 6rpx;
    overflow: hidden;
}
.vux-close {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    color: #999;
    width: 48rpx;
    height: 48rpx;
}
 .vux-close:before {
    content: "";
    position: absolute;
    left: 0;
    top: 22rpx;
    width: 48rpx;
    height: 2rpx;
    background-color: currentColor;
    transform: rotate(-45deg);
}
.vux-close:after {
    content: "";
    position: absolute;
    left: 0;
    top: 22rpx;
    width: 48rpx;
    height: 2rpx;
    background-color: currentColor;
    transform: rotate(45deg);
}

  .webview-button{
    width:0 !important;
    height:0 !important;
  }
/* //下載app彈窗 end */


/* //红包弹窗 */

.redPacket {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 100;
    background: rgba(0,0,0,.4);
}
.redPacket .beforeOpen {
    position: relative;
    width: 100%;
    top: 23%;
}
.redPacket .beforeOpen .openbtn {
    position: absolute;
    top: 29%;
    left: 0;
    right: 0;
    font-size: 82rpx;
    box-shadow: 0 0 8rpx #9f1d2a;
    background: #ffdda6;
    width: 140rpx;
    height: 140rpx;
    border-radius: 150rpx;
    margin: auto;
    line-height: 140rpx;
    text-align: center;
    /* animation: bgs_colors2 .8s infinite; */
}
.redPacket .beforeOpen image {
    width: 100%;
}

.redPacket .desc {
    position: absolute;
    bottom: 41%;
    left: 0;
    right: 0;
    margin: auto;
    font-size: 56rpx;
    color: #facfa3;
    transform: rotate(-3deg);
}
.b{
font-weight: bold;
}
    
.redPacket .desc .p,.redPacket .desc .p1 {
    text-align: center;
}

.redPacket .desc .p1 .span {
    color: #fbb700;
}

.redPacket .Opened {
    position: relative;
    width: 100%;
    top: 2%;
    text-align: center;
}
.redPacket .Opened .title {
    position: absolute;
    top: 30%;
    left: 0;
    right: 0;
    font-size: 40rpx;
    color: #e61817;
}
.redPacket .Opened .title .num {
    font-size: 67rpx;
    text-align: center;
}

.redPacket .Opened .title .num .span {
    font-size:145rpx;
}
.redPacket .Opened .immediatelyUse {
    position: absolute;
    bottom: 20%;
    left: 0;
    right: 0;
    margin: auto;
    font-size: 38rpx;
    color: #e61817;
    width: 370rpx;
    background: #fdf9ed;
    height:85rpx;
    border-radius:40rpx;
    line-height: 85rpx;
}

.redPacket .Opened .explain {
    position: absolute;
    bottom: 13%;
    left: 0;
    right: 0;
    margin: auto;
    font-size: 26rpx;
    color: #fdf9ed;
}
.redPacket .cancel {
    position: absolute;
    top: 5%;
    right: 12%;
    border: 1px solid #fff;
    width: 55rpx;
    height: 55rpx;
    border-radius: 55rpx;
}
.hide{
  display: none;
}
.redPacket .cancel:before {
    display: block;
    width: 55rpx;
    height:55rpx;
    line-height:55rpx;
    position: relative;
    margin-left: 10rpx;
    margin-top: -4rpx;
    font-family: nwscfonts!important;
    font-weight: 400;
    font-style: normal;
    content: "\E020";
    color: #fff;
    font-size: 80rpx;
    vertical-align: middle;
}

