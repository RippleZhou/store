.w_grayBgBox {
    width: 100%;
    position: absolute;
    height: 100%;
    background: #f5f5f5;
}

.w_grayBgBox ._v-container {
    top: 2.75rem;
    background: #f5f5f5;
}

.w_detailList_box .w_detailList_list {
    width: 100%;
    display: flex;
    border-bottom: 1px solid #ebebeb;
    padding: .625rem .625rem;
    background: #fff;
}

._v-container>._v-content>.loading-layer[data-v-ecaca2b0] {
    width: 100%;
    height: 60px;
    text-align: center;
    font-size: 16px;
    line-height: 60px;
    color: #aaa;
    position: relative;
}

.w_detailList_box .w_detailList_list .w_detailList_lets, .w_detailList_box .w_detailList_list .w_detailList_rigs {
    width: 75%;
    text-align: left;
    font-size: .9375rem;
    color: #333;
}

.w_detailList_box .w_s_detail .w_detailList_lets:before {
    font-family: nwscfonts!important;
    font-weight: 400;
    font-style: normal;
    content: "\E066";
    color: #333;
    font-size: 2.5rem;
    vertical-align: middle;
}

.w_grayBgBox ._v-container {
    top: 2.75rem;
    background: #f5f5f5;
}

.w_detailList_box .w_s_detail .w_detailList_lets:before {
    position: relative;
    margin-top: -.625rem;
    display: inline-block;
}

.w_detailList_box .w_detailList_list .w_detailList_lets .label, .w_detailList_box .w_detailList_list .w_detailList_rigs .label {
    font-size:24rpx;
    color: #999;
    display: block;
}

.w_detailList_box .w_detailList_list .w_detailList_lets, .w_detailList_box .w_detailList_list .w_detailList_rigs {
    width: 75%;
    text-align: left;
   font-size:30rpx;
    color: #333;
}

.w_detailList_box .w_detailList_list .w_detailList_rigs {
    width: 25%;
    text-align: right;
}

