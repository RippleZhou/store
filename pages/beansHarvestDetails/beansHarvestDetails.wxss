/* pages/beansHarvestDetails/beansHarvestDetails.wxss */

.w_beanharsBox {
    padding: 5% 10%;
    text-align: center;
}

.w_beanharsBox .h2 {
    font-size: .875rem;
    color: #333;
}

.w_beanharsBox .h2:before {
    display: block;
    font-size: 6.25rem!important;
    line-height: 6.25rem;
}

.w_beanharsBox .h2:before {
    font-family: nwscfonts!important;
    font-weight: 400;
    font-style: normal;
    content: "\E071";
    color: #ff9000;
    font-size: 2.5rem;
    vertical-align: middle;
}

.enter-bean{
  width: 100%;
    height: 2.8125rem;
    line-height: 2.8125rem;
    font-size: .9375rem;
    color: #fff;
    text-align: center;
    background: -webkit-gradient(linear,left top, right top,from(#f90000),to(#f61e65));
    background: linear-gradient(to right,#f90000,#f61e65);
    display: block;
    border-radius: .3125rem;
}


.w_beanharsBox .h3 {
    font-size: 1rem;
    color: #333;
    padding: 8% 0;
    font-weight: 600;
}

.canSubmit{
  background: linear-gradient(to right,#f90000,#f61e65);
}

.continue-bean{
  color: #666;
  background:#f5f5f5 !important;
}

.w_beaHarsTims {
    position: absolute;
    bottom: 5%;
    left: 0;
    width: 100%;
    text-align: center;
    font-size: .75rem;
    color: #666;
}

page{
  background: #fff;
}