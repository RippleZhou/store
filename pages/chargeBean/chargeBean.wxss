/* pages/chargeBean/chargeBean.wxss */
page{background:#fff;color:#333;}
.userinfo{display: flex;background:#fff;padding: 20rpx 60rpx;border-bottom: 4rpx solid #f5f5f5;margin-top:80rpx;
}
.head{width:70rpx;height:70rpx;border-radius: 100rpx;}
.cellphone{line-height: 70rpx;flex:1;}

.number-wrap{padding:50rpx 30rpx;background:#fff; font-size: 32rpx;}
.beanNumber{display: flex;height:110rpx;padding:0 30rpx;background:#f5f5f5;border-radius: 10rpx;    border: 1px solid #ebebeb;}
.numberInput{flex:1;height:110rpx;text-align:right;margin-right: 10rpx;}
.unit{height:110rpx;line-height: 110rpx;}

.chargeButton{text-align: center;color:#fff;background:#f7c9c9;border-radius: 10rpx;height:90rpx;line-height: 90rpx;}
.button-wrap{padding: 100rpx 70rpx;}

.chargeButton-active{background: linear-gradient(to right,#f90000,#f61e65);
  color:#fff;text-align: center;border-radius: 10rpx;height:90rpx;line-height: 90rpx;}

.w_s_ricon{
  position:absolute;
  top:0;
  right:60rpx;
}
.w_s_ricon:before {
    font-family: nwscfonts!important;
    content: "\E067"!important;
    color: #333!important;
    font-size: 80rpx !important;
    vertical-align: middle!important;
}