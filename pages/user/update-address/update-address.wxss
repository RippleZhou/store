/* pages/user/update-address/update-address.wxss */
@import "/style/common.wxss";
.up_address_list{
  width:100%;background: #fff;display:flex;display:-webkit-flex; /* Safari */display: -ms-flexbox;
  padding:15rpx 20rpx;border-bottom:1px solid #eee;
}
.up_address_list label{
  display: block;font-size: 30rpx;color:#999;width:23%;line-height: 80rpx;
}
.up_address_list input{
  width:77%;text-align: left;font-size: 30rpx;color:#333;height: 80rpx;
}
.up_address_list2 input{width:100%;}

.up_address_list picker,.up_address_list .selCity{
  width:77%;font-size: 30rpx;height: 80rpx;line-height: 80rpx;
}

.up_address_list3{
  display:flex;display:-webkit-flex; /* Safari */display: -ms-flexbox;padding:35rpx 20rpx;
  width:100%;
}


.up_address_links{position: fixed;z-index: 100;left:0;bottom:0;
  width:100%;background: #fff;font-size: 30rpx;height: 90rpx;line-height: 90rpx;text-align: center;
  color:#e61817;
}

.up_address_list3 .up_address_sel{
width:50%;text-align: left;font-size: 30rpx;color:#999;
}
.up_address_list3 .up_address_dels{
width:50%;text-align: right;font-size: 30rpx;color:#333;line-height: 50rpx;
}
.up_address_dels::before{
  font-family: nwscfonts!important; font-size:70rpx;
  content:"\E025";color:#666;display:inline-block;vertical-align: middle;
  line-height: 50rpx;margin-right: 10rpx;margin-top: -10rpx;
}

checkbox .wx-checkbox-input{
   border-radius:54rpx;width: 54rpx;height: 54rpx;vertical-align:middle;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border-color: #e61817;background: #e61817;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius:54rpx;width: 54rpx;height: 54rpx;line-height: 54rpx;
   text-align: center; font-size:30rpx;color:#fff; background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
   vertical-align:middle;
}


.fl{float: left}
.fr{float: right}
/*选择器*/
.selector{ width: 100%; position: fixed; bottom: 0; left: 0; z-index: 999999}
.selector .inner_box{ position: relative; z-index: 999999}
.selector .header_box{ padding: 25rpx 0; overflow: hidden; box-sizing: border-box; background: #FBF9FE;}
.selector .header_box .item{ float: left; font-size: 34rpx; color: #586C94; box-sizing: border-box;}
.selector .header_box .l{ width: 25%; padding-left: 25rpx;}
.selector .header_box .c{ width: 50%; text-align: center}
.selector .header_box .r{ width: 25%; text-align: right; padding-right: 25rpx;}
.selector .selected{ height: 90rpx;}
.selector .picker_box{ width: 100%; height: 485rpx; background: #fff;}
.selector .picker_box picker-view-column{ text-align: center;}
.selector .picker_box picker-view-column view{ line-height: 90rpx;}
.selector .layer{ width: 100%; height: 100%; position: fixed; left: 0; top: 0; z-index: 10; background:rgba(0,0,0,0.5); }
