/* pages/modifyPhone/modifyPhone.wxss */
page{
  background: #fff;
}

.w_modPhones{
  padding:30rpx 20rpx;

}
.w_mod_list{
  background:#f5f5f5;border:1px solid #ebebeb;padding:0 10rpx;height:88rpx;border-radius: 10rpx;
   display: flex;display: -webkit-flex;margin-bottom:20rpx;
}
.w_mod_list input{height:88rpx;
  width:100%;font-size: 30rpx;color:#333;padding:0 10rpx;
}
.w_mod_list2 input{
  width:72%;
}
.w_mod_list2 button{
  background:#fff;font-size: 30rpx;color:#333;width:28%;text-align:center;
  height: 66rpx;line-height: 66rpx;border:1rpx solid #333;margin-top: 10rpx;
}

.w_mod_btn{
  margin: 90rpx;color:#fff;height: 90rpx;line-height: 90rpx;border-radius: 10rpx;
  background: -webkit-linear-gradient(left, #f90000 , #f61e65); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #f90000, #f61e65); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #f90000, #f61e65); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #f90000 , #f61e65); /* 标准的语法 */
  text-align: center;font-size: 30rpx;
}

.w_mod_tips{
  font-size: 26rpx;color:#e61817;text-align: left;width:100%;
}
