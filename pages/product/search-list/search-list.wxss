@import "/style/common.wxss";
.head_index {
  z-index: 100;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  background: #fff;
  height: 88rpx;
  border-bottom: 1px solid #f5f5f5;
}
.head_i_cens {
  background: #f5f5f5;
  height: 60rpx;
  border-radius: 6rpx;
  margin: 14rpx 20rpx 0;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.head_i_cens:before {
  line-height: 52rpx;
  margin-right: 12rpx;
  display: inline-block;
  font-family: nwscfonts!important;
  font-weight: 400;
  font-style: normal;
  content: '\E005';
  color: #666;
  font-size: 80rpx;
  vertical-align: top;
}
.search_form {
  display: inline-block;
  width: 90%;
  height: 60rpx;
}
.search_input {
  font-size: 26rpx;
  color: #999;
  vertical-align: middle;
  height: 60rpx;
  width: 100%;
}
.product-list {
  margin-top: 90rpx;
  height: calc(100vh - 90rpx);
}
.no_blankIms {
  width: 30%;
  display: block;
  margin: 0 auto;
  padding-top: 100rpx;
}
.nodata-text {
  width: 100%;
  height: 60px;
  text-align: center;
  font-size: 32rpx;
  line-height: 120rpx;
  color: #aaa;
  position: relative;
}